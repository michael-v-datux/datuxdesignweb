---
// components/Availability.astro
const { translations } = Astro.props;
---
<section id="availability" class="availability w-full py-12 px-6 md:px-10 lg:px-16">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 mb-6">
    <!-- Text column -->
    <div class="md:col-span-1">
      <h2 class="text-2xl md:text-3xl font-semibold mb-4">
        {translations.availability.title}
      </h2>
      <p class="mt-8 text-lg text-neutral-700">
        {translations.availability.subtitle}
      </p>
    </div>

    <div class="md:col-span-1 space-y-3">
      <div class="flex flex-wrap gap-3">
        {translations.availability.tags
          .filter(tag => tag.color === 'green')
          .map(tag => (
            <span class="px-3 py-1 rounded-full text-sm font-medium whitespace-nowrap bg-green-200 text-green-900">
              {tag.label}
            </span>
          ))}
      </div>
      <div class="flex flex-wrap gap-3">
        {translations.availability.tags
          .filter(tag => tag.color === 'yellow')
          .map(tag => (
            <span class="px-3 py-1 rounded-full text-sm font-medium whitespace-nowrap bg-yellow-200 text-yellow-900">
              {tag.label}
            </span>
          ))}
      </div>
      <div class="flex flex-wrap gap-3">
        {translations.availability.tags
          .filter(tag => tag.color === 'red')
          .map(tag => (
            <span class="px-3 py-1 rounded-full text-sm font-medium whitespace-nowrap bg-rose-200 text-rose-900">
              {tag.label}
            </span>
          ))}
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto mt-16">
    <p class="quote text-xlg italic text-neutral-500">
      {translations.availability.note}
    </p>
  </div>
</section>
