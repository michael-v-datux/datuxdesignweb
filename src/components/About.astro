---
const { translations } = Astro.props;
---

<section id="about" class="about relative overflow-hidden py-24">
  <div 
    class="absolute top-0 left-0 w-screen h-full"
    style="background: url('/images/about-back.png') center / cover no-repeat; z-index: 0;"
  ></div>

  <div class="content relative z-10 w-full px-6 md:px-10 lg:px-16 flex justify-center">
    <div class="w-full md:w-[100%] lg:w-[70%] sm:w-[85%] text-left">
      <h2 class="w-full text-5xl md:text-5xl font-semibold mb-24">
        <span class="flex items-center gap-3">
          <img src="/icons/star-text.svg" alt="Star icon" class="h-[1em] w-auto mr-2" />
          {translations.about.title}
        </span>
      </h2>
      <div class="w-full md:w-[70%] mx-auto">
        {translations.about.description.map(p => (
          <p class="text-base text-neutral-700 dark:text-neutral-300 leading-relaxed mt-8 mb-4 text-2xl md:text-2xl">
            {p}
          </p>
        ))}
      </div>
    </div>
  </div>
</section>
