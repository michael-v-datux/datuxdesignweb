---
// components/KeyStrengths.astro
const { translations } = Astro.props;
---
<section id="dfi" class="key-strengths w-full py-24 px-6 md:px-10 lg:px-16">
  <div class="max-w-6xl mx-auto text-left">
    <h2 class="text-2xl md:text-3xl font-semibold mb-12">
      {translations.keyStrengths.title}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 auto-rows-auto">
      {translations.keyStrengths.items.map((item) => (
        <div
          class={`relative
            ${item.style === 'gradient-border' ? 'gradient-border-card' : ''}
            ${item.style === 'gradient' ? 'bg-gradient-to-br from-[#E6E1FF] via-[#F7D1D1] to-[#FFF3B0] rounded-2xl' : ''}
            ${item.style !== 'gradient' && item.style !== 'gradient-border' ? 'border border-neutral-300 rounded-2xl' : ''}
            ${item.customClass ?? ''}`}
        >
          <div
            class={`inner h-full p-6
              ${item.twoColumn ? 'flex flex-row gap-6' : 'flex flex-col justify-between'}
              ${item.image && !item.twoColumn ? 'relative overflow-hidden' : ''}
              ${item.size === 'large' ? 'md:row-span-2' : ''}`}
          >
            <div class="flex-1">
              <h3 class="text-lg font-semibold mb-2">{item.title}</h3>
              {item.title === "Simplifying Complex Interfaces" && (
                <div class="ribbon-wrapper">
                  <div class="ribbon-track">
                    <div class="ribbon-content">
                      <span>MOVE</span>
                      <span>HIDE</span>
                      <span>GROUP</span>
                      <span>FOCUS</span>
                      <span>COMBINE</span>
                      <span>REDUCE</span>
                    </div>
                  </div>
                </div>
              )}
              <p class="text-sm text-neutral-700 leading-relaxed">{item.description}</p>
            </div>

            {item.twoColumn && item.sideImage && (
              <div class="w-1/5 flex items-center justify-end">
                <img src={item.sideImage} alt="Side visual" class="w-full max-w-[80px]" />
              </div>
            )}
          </div>

          {item.image && (
            <img src={item.image} alt="Background visual" class="absolute bottom-0 right-0 w-28 md:w-32" />
          )}
        </div>
      ))}
    </div>
  </div>
</section>
