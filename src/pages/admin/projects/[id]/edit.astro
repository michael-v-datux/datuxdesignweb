---
export const prerender = false;
---
<html>
  <body class="p-8">
    <h1 class="text-2xl mb-4">Edit Project</h1>
    <form id="project-form" class="flex flex-col gap-4 max-w-lg">
      <input type="text" name="title_en" id="title_en" class="p-2 border rounded" placeholder="Title EN" />
      <input type="text" name="title_uk" id="title_uk" class="p-2 border rounded" placeholder="Title UK" />
      <textarea name="description_en" id="description_en" class="p-2 border rounded" placeholder="Description EN"></textarea>
      <textarea name="description_uk" id="description_uk" class="p-2 border rounded" placeholder="Description UK"></textarea>
      <input type="url" name="thumbnail" id="thumbnail" class="p-2 border rounded" placeholder="Thumbnail URL" />
      <div class="flex items-center gap-2">
        <input type="checkbox" name="is_protected" id="is_protected" />
        <label for="is_protected">Password Protected?</label>
      </div>
      <input type="text" name="password" id="password" class="p-2 border rounded" placeholder="Password (if protected)" />
      <select name="status" id="status" class="p-2 border rounded">
        <option value="draft">Draft</option>
        <option value="published">Published</option>
      </select>
      <button type="submit" class="bg-blue-500 text-white p-2 rounded">Update</button>
    </form>

    <h2 class="text-xl mt-8 mb-4">Blocks</h2>
    <div id="blocks" class="relative flex flex-col gap-4"></div>
    <button id="add-block" class="bg-green-500 text-white px-4 py-2 mt-4 rounded">+ Add Block</button>

    <script type="module" src="/scripts/features/drag-blocks.js"></script>
    <script type="module" src="/scripts/admin/edit.js"></script>
  </body>
</html>